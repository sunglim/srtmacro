{
  "manifest_version": 3,
  "name": "SRT Macro",
  "description": "SRT 자동 예약 매크로",
  "version": "1.0.1",
  "host_permissions": [
    "https://etk.srail.co.kr/"
  ],
  "icons": {
      "128": "images/icon128.png"
  },
  "content_scripts": [ {
    "all_frames": true,
    "js": ["jquery-1.11.0.min.js", "content.js"],
    "matches": ["https://etk.srail.kr/*"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "images/btn_start.png", "images/btn_stop.png", "assets/tada.mp3"],
      "matches": ["https://etk.srail.kr/*"]
    }
  ],
  "options_ui": {
    "page": "options.html"
  }
}
